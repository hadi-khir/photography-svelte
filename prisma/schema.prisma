// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Lens {
  id Int @id @default(autoincrement())
  name String @unique
  metadata Metadata[]
  camera Camera []
}

model Camera {
  id Int @id @default(autoincrement())
  model String @unique
  lens Lens[]
  metadata Metadata[]
}

model Metadata {
  id Int @id @default(autoincrement())
  captureDate DateTime? @db.Date
  iso Int
  aperture Float
  shutterSpeed Float
  focalLength Float
  title String
  caption String?
  copyright String?
  location String?
  city String
  province String
  country String

  camera Camera @relation(fields: [cameraId], references: [id])
  cameraId Int
  @@index([cameraId])

  lens Lens @relation(fields: [lensId], references: [id])
  lensId Int
  @@index([lensId])

  photo Photo @relation(fields: [photoId], references: [id])
  photoId Int @unique
}

model Album {
  id Int @id @default(autoincrement())
  title String @unique
  photos Photo[]
}

model Photo {
  id Int @id @default(autoincrement())
  title String @unique
  url String
  thumbnail String
  album Album @relation(fields: [albumId], references: [id])
  albumId Int
  metadata Metadata?

  @@index([albumId])
}