generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Album {
  id Int @id @default(autoincrement())
  title String @unique
  photos Photo[]
}

model Photo {
  id Int @id @default(autoincrement())
  title String @unique
  url String
  album Album @relation(fields: [albumId], references: [id])
  albumId Int

  @@index([albumId])
}